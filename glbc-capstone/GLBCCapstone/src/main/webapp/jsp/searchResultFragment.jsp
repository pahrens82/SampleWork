<!--Display article search results-->

<div class="row">
	<div class="col-sm-8">
		<div id="searchResultArticleDiv">
			<div id="searchResultArticleContent" class="table table-hover" style="display: none">                        
				<div id="searchResultArticle">
					<div id="searchResultArticleTitle"></div>
					<div id="searchResultArticleUserName"></div>
					<div id="searchResultArticlePublicationDate"></div>
					<hr>
					<div id="searchResultArticleTextBody"></div>
					<div id="searchResultArticleCategory"></div>
				</div>
			</div>
		</div>
	</div>
	
	<div class="col-sm-4">
		<div id="articleSearchDiv">
			<table id="searchResultArticleTable" class="table table-hover" style="display: none">
				<tr>
					<th id="searchResultArticleTableHead" colspan="3" width="100%">Articles</th>
				</tr>
				<tbody id="searchResultArticlesTableBody"></tbody>
			</table>
		</div>
	</div>
</div>

